            $('.divVendas td input').keyup(function (){ 
                $('.divVendas td input').each(function(){
                    switch($(this).attr('name')){
                        case 'codigo_produto':
                           break;
                        case 'descricao':
                           break;
                        case 'quantidade':
                           $(this).mask('################', {reverse: true});
                           quantidade=$(this).val();
                           break;
                        case 'vUnitarioItem':
                            vUnitario=$(this).val();
                            break;
                        case 'vToalItem':
                            $(this).mask('###.###.###.###,##', {reverse: true});
                            var vTotal=$(this).val();
                            break;
                        case 'pDescontoItem':
                            pDesconto=$(this).val()/100;
                            vDesconto=vTotal-(vTotal*pDesconto);
                            $(this).mask('000', {reverse: true});
                            if($(this).val()>'100'){
                                $(this).val('100');
                            }
                            break;
                        case 'icmsSt':
                            $(this).mask('###.###,##', {reverse: true});
                            var icmsSt=$(this).val();
                            $('.autoQuadro td').each(function(){
                                if($(this).attr('nome')=='icmsSt'){
                                    if(icmsSt){
                                        $(this).text(icmsSt);
                                    }else{
                                        $(this).text('0,00'); 
                                    }
                                }
                            })                      
                            break;
                        case 'ipi':
                            $(this).mask('###.###,##', {reverse: true});
                            var ipi=$(this).val();
                            $('.autoQuadro td').each(function(){
                                if($(this).attr('nome')=='ipi'){
                                    if(ipi){
                                        $(this).text(ipi);
                                    }else{
                                        $(this).text('0,00');
                                    }
                                }
                            })
                            break;
                    }
                })
            })          
            $('td input').each(function(){
                if($(this).attr('name')=='quantidade'){
                    $(this).keyup(function(){
                        var algarismo1=qEstoque.length;
                        var algarismo2=$(this).val().length;
                        var zero=algarismo1-algarismo2;
                        switch(zero){
                            case 1:
                                zero='0';
                                break;
                            case 2:
                                zero='00';
                                break;
                            case 3:
                                zero='000';
                                break;
                            default:
